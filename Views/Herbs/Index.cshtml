@model IEnumerable<HerbalApothecary.Models.Herb>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CommonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contraindications)
