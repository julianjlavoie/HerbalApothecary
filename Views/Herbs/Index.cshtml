                @Html.DisplayFor(modelItem => item.Actions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Decoction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Energy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Safety)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.HerbId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HerbId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HerbId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
